@model BMS.UI.ViewModels.IndexModel
@{
    ViewData["Title"] = "Books";
}

<h2>Book List</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Genre</th>
            <th>Published Year</th>
            <th>Price</th>
            <th>Discount</th>
            <th>Final Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var book in Model.Books)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.Author</td>
                    <td>@book.Genre</td>
                    <td>@book.PublishedYear</td>
                    <td>@book.Price.ToString("C")</td>
                    <td>@book.Discount%</td>
                    <td>@book.FinalPrice.ToString("C")</td>
                    <td>
                        <a href="/Edit/@book.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a href="/Delete/@book.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<a href="/Add" class="btn btn-primary">Add New Book</a>